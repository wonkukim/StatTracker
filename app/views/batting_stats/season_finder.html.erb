<% title "Batting Season Finder" %>
<%= form_tag :controller => :batting_stats, :action => :find_seasons do |f| %>
  <% number = 5 %>
  <%= hidden_field "fields", "count", {:value => number, :id => "count"} %>
  <% (1..number).each do |i| %>
      <%= select_tag "#{i}[stat]",
		raw("<option value = ''>Stat #{i}</option>
                <option>Games</option>
		<option>Plate Appearances</option>
		<option>At Bats</option>
		<option>Runs</option>
		<option>Hits</option>
		<option>Doubles</option>
		<option>Triples</option>
		<option>Home Runs</option>
		<option>Total Bases</option>
		<option>Extra Base Hits</option>
		<option>RBI</option>
		<option>Stolen Bases</option>
		<option>Caught Stealing</option>
		<option>Walks</option>
		<option>Strikeouts</option>
		<option>Intentional Walks</option>
		<option>Hit By Pitch</option>
		<option>Sacrifice Hits</option>
		<option>Sacrifice Flies</option>
		<option>Grounded Into Double Plays</option>")
		%>
      <%= select_tag "#{i}[operator]", options_for_select(%w(= < <= > >=)) %>
      <%= text_field "#{i}", "number", :size => 5, :placeholder => "Value" %><br />
  <% end %>
  Postseason: <%= check_box_tag :postseason %><br />
  <%= submit_tag "Find Seasons" %>
<% end %>

	<style>
#container{
margin-bottom:-110px;
}
</style>